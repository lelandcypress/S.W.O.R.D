            <td>{{mission.status}}</td>
            <td><button class="btn btn-outline-dark joinMissionBtn" data-id="{{mission.mission_id}}">Join
                Mission</button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
