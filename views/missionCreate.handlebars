<h1 class="header-text text-center">Need Assistance?</h1>
<div class="form-parent">
    <div class="d-flex form-container justify-content-center">
        <form class='new-mission-form card p-3 shadow-card'>

            {{!-- <div class="form-group"> --}}
                <label for="name">Mission Name</label>
                <input class="inputs" type='text' id='name' name='name'>
                {{!--
            </div> --}}


            {{!-- <div class="form-group"> --}}
                <label class="mt-2" for="location">Where is the mission?</label>
                <input class="inputs" type='text' id="location" name="location">
                {{!--
            </div> --}}

            {{!-- <div class="form-group"> --}}
                <label class="mt-2" for="description">Describe the mission</label>
                <textarea class="inputs" type='text' id="description" name="description"></textarea>
                {{!--
            </div> --}}

            {{!-- <div class="form-group mb-2"> --}}
                <label class="mt-2" for="priority">Priority</label>
