<h1 class="text-center">Need Assistance?</h1>
<div class="form-parent">
    <div class="d-flex form-container justify-content-center">
        <form class='new-mission-form card p-3 shadow-card'>

            <div class="form-group">
                <label for="name">Mission Name</label>
                <input class="inputs" type='text' id='name' name='name'>
            </div>

            <div class="form-group">
                <label for="location">Where is the mission?</label>
                <input class="inputs" type='text' id="location" name="location">
            </div>

            <div class="form-group">
                <label for="description">Describe the mission</label>
                <textarea class="inputs" type='text' id="description" name="description"></textarea>
            </div>

            <div class="form-group mb-2">
                <label for="priority">Priority</label>
                <select class="inputs" name='priority' id='priority'>
                    <option value='Routine'>Routine</option>
                    <option value='Urgent'>Urgent</option>
                    <option value='Critical'>Critical</option>
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn" id='mission-create' value='Request Help'>Submit</button>
            </div>

        </form>
    </div>
</div>

<script src="/js/newMission.js"></script>